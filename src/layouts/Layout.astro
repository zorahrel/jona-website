---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  activePage?: 'abstract' | 'framing' | 'research-log' | 'database' | 'cai';
  fitContent?: boolean;
}

const { title, activePage = 'abstract', fitContent = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Design for the Continuum - Can we speak with the more than human?" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header activePage={activePage} />
    <main class:list={['flex-1 flex flex-col', fitContent ? '' : 'pb-24 lg:pb-28']}>
      <slot />
    </main>
    <Footer staticPosition={fitContent} />
  </body>
</html>


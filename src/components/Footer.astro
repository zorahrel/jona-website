---
// Marquee footer with repeating text
const text = "can we speak with the more than human?";
---

<footer class="bg-charcoal text-cream overflow-hidden">
  <div class="h-24 lg:h-[100px] flex items-center">
    <div class="marquee-animation whitespace-nowrap flex">
      <!-- Repeat text many times for seamless loop -->
      {Array(6).fill(null).map(() => (
        <span class="text-4xl lg:text-6xl font-semibold px-12">
          {text}
        </span>
      ))}
    </div>
  </div>
</footer>

<style>
  .marquee-animation {
    animation: marquee 25s linear infinite;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .marquee-animation:hover {
    animation-play-state: paused;
  }
</style>


<Layout title="Design for the Continuum" activePage="abstract">
  <!-- Hero Section -->
  <section class="min-h-[calc(100vh-180px)] px-6 lg:px-24 py-12 lg:py-24 flex items-end">
    <h1 class="font-black text-[15vw] lg:text-[230px] leading-[0.85] tracking-[-0.02em]">
      <span class="block">[design for]</span>
      <span class="block">the </span>

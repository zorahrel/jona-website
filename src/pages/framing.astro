  <script>
    // Mobile navigation elements
    const researchMobileNav = document.getElementById("research-mobile-nav");
    const methodologyMobileNav = document.getElementById(
      "methodology-mobile-nav"
    );
    const researchMobileNavItems = document.querySelectorAll(
      ".research-mobile-nav-item"
    );
    const methodologyMobileNavItems = document.querySelectorAll(
      ".methodology-mobile-nav-item"
    );

    // Research container for visibility check
    const researchContainer = document.querySelector(
      ".research-container"
    ) as HTMLElement;
    const methodologyContainer = document.querySelector(
      ".methodology-container"
    ) as HTMLElement;

    // Intersection Observer for Research sections
    const researchSections = document.querySelectorAll(".research-section");
    const researchNavItems = document.querySelectorAll(".research-nav-item");

    const researchObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const sectionId = entry.target.id;

            // Update desktop nav items
            researchNavItems.forEach((navItem) => {
              const targetSection = navItem.getAttribute("data-target");
              if (targetSection === sectionId) {
                navItem.classList.remove("opacity-20");
              } else {
                navItem.classList.add("opacity-20");
              }
            });

            // Update mobile nav items
            researchMobileNavItems.forEach((navItem) => {
              const targetSection = navItem.getAttribute("data-target");
              if (targetSection === sectionId) {
                navItem.classList.remove("opacity-20");
              } else {
                navItem.classList.add("opacity-20");
              }
            });
          }
        });
      },
      {
        rootMargin: "-20% 0px -60% 0px",
        threshold: 0,
      }
    );

    researchSections.forEach((section) => {
      researchObserver.observe(section);
    });

    // Intersection Observer for Methodology/Output sections
    const methodologySections = document.querySelectorAll(
      ".methodology-section"
    );
    const methodologyNavItems = document.querySelectorAll(
      ".methodology-nav-item"
    );

    const methodologyObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const sectionId = entry.target.id;

            // Update desktop nav items
            methodologyNavItems.forEach((navItem) => {
              const targetSection = navItem.getAttribute("data-target");
              if (targetSection === sectionId) {
                navItem.classList.remove("opacity-30");
              } else {
                navItem.classList.add("opacity-30");
              }
            });

            // Update mobile nav items
            methodologyMobileNavItems.forEach((navItem) => {
              const targetSection = navItem.getAttribute("data-target");
              if (targetSection === sectionId) {
                navItem.classList.remove("opacity-30");
              } else {
                navItem.classList.add("opacity-30");
              }
            });
          }
        });
      },
      {
        rootMargin: "-20% 0px -60% 0px",
        threshold: 0,
      }
    );

    methodologySections.forEach((section) => {
      methodologyObserver.observe(section);
    });

    // Show/hide mobile navigation based on scroll position
    function updateMobileNavVisibility() {
      if (window.innerWidth >= 1024) return; // Only on mobile

      const researchRect = researchContainer?.getBoundingClientRect();
      const methodologyRect = methodologyContainer?.getBoundingClientRect();
      const headerHeight = 56; // header height (top-14 = 3.5rem)
      const navHeight = headerHeight + 80; // header + mobile nav height

      // Show research nav when in research section
      if (
        researchRect &&
        researchRect.top < navHeight &&
        researchRect.bottom > navHeight
      ) {
        researchMobileNav?.classList.remove("opacity-0", "pointer-events-none");
        researchMobileNav?.classList.add("opacity-100");
      } else {
        researchMobileNav?.classList.add("opacity-0", "pointer-events-none");
        researchMobileNav?.classList.remove("opacity-100");
      }

      // Show methodology nav when in methodology section
      if (
        methodologyRect &&
        methodologyRect.top < navHeight &&
        methodologyRect.bottom > navHeight
      ) {
        methodologyMobileNav?.classList.remove(
          "opacity-0",
          "pointer-events-none"
        );
        methodologyMobileNav?.classList.add("opacity-100");
      } else {
        methodologyMobileNav?.classList.add("opacity-0", "pointer-events-none");
        methodologyMobileNav?.classList.remove("opacity-100");
      }
    }

    window.addEventListener("scroll", updateMobileNavVisibility, {
      passive: true,
    });
    window.addEventListener("resize", updateMobileNavVisibility);
    updateMobileNavVisibility();

    // Click navigation for desktop
    researchNavItems.forEach((navItem) => {
      const el = navItem as HTMLElement;
      el.addEventListener("click", () => {
        const targetId = el.getAttribute("data-target");
        const targetSection = document.getElementById(targetId || "");
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
      el.style.cursor = "pointer";
    });

    methodologyNavItems.forEach((navItem) => {
      const el = navItem as HTMLElement;
      el.addEventListener("click", () => {
        const targetId = el.getAttribute("data-target");
        const targetSection = document.getElementById(targetId || "");
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
      el.style.cursor = "pointer";
    });

    // Click navigation for mobile
    researchMobileNavItems.forEach((navItem) => {
      const el = navItem as HTMLElement;
      el.addEventListener("click", () => {
        const targetId = el.getAttribute("data-target");
        const targetSection = document.getElementById(targetId || "");
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
      el.style.cursor = "pointer";
    });

    methodologyMobileNavItems.forEach((navItem) => {
      const el = navItem as HTMLElement;
      el.addEventListener("click", () => {
        const targetId = el.getAttribute("data-target");
        const targetSection = document.getElementById(targetId || "");
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
      el.style.cursor = "pointer";
    });

    // Methodology & Output Sliders
    const sliderState: Record<string, number> = {
      m1: 0,
      m2: 0,
      m3: 0,
      o1: 0,
      o2: 0,
      o3: 0,
    };
    const slideCounts: Record<string, number> = {
      m1: 4,
      m2: 3,
      m3: 3,
      o1: 3,
      o2: 2,
      o3: 2,
    };

    function updateSlider(cardId: string) {
      const current = sliderState[cardId];
      const total = slideCounts[cardId];

      // Update slides
      const slides = document.querySelectorAll(
        `[data-slides="${cardId}"] .methodology-slide`
      );
      slides.forEach((slide, i) => {
        if (i === current) {
          slide.classList.add("active");
        } else {
          slide.classList.remove("active");
        }
      });

      // Update dots
      const dots = document.querySelectorAll(`[data-dots="${cardId}"] span`);
      dots.forEach((dot, i) => {
        if (i === current) {
          (dot as HTMLElement).style.opacity = "1";
        } else {
          (dot as HTMLElement).style.opacity = "0.3";
        }
      });

      // Update prev button
      const prevBtn = document.querySelector(
        `[data-prev="${cardId}"]`
      ) as HTMLElement;
      if (prevBtn) {
        if (current <= 0) {
          prevBtn.classList.add("opacity-30", "pointer-events-none");
        } else {
          prevBtn.classList.remove("opacity-30", "pointer-events-none");
        }
      }

      // Update next button
      const nextBtn = document.querySelector(
        `[data-next="${cardId}"]`
      ) as HTMLElement;
      if (nextBtn) {
        if (current >= total - 1) {
          nextBtn.classList.add("opacity-30", "pointer-events-none");
        } else {
          nextBtn.classList.remove("opacity-30", "pointer-events-none");
        }
      }
    }

    // Add event listeners for prev/next buttons
    document.querySelectorAll(".methodology-prev").forEach((btn) => {
      btn.addEventListener("click", () => {
        const cardId = btn.getAttribute("data-prev");
        if (cardId && sliderState[cardId] > 0) {
          sliderState[cardId]--;
          updateSlider(cardId);
        }
      });
    });

    document.querySelectorAll(".methodology-next").forEach((btn) => {
      btn.addEventListener("click", () => {
        const cardId = btn.getAttribute("data-next");
        if (cardId && sliderState[cardId] < slideCounts[cardId] - 1) {
          sliderState[cardId]++;
          updateSlider(cardId);
        }
      });
    });

    // Initialize sliders
    Object.keys(sliderState).forEach((cardId) => {
      updateSlider(cardId);
    });
  </script>

